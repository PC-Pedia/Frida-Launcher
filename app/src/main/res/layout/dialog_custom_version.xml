<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/versionHintText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter any Frida version to install (e.g., 16.7.19)"
        android:textAppearance="@style/TextAppearance.FridaLauncher.Body"
        android:textColor="@color/text_secondary"
        android:layout_marginBottom="20dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:hint="Version (e.g., 16.7.19)"
        app:boxStrokeColor="@color/blue_primary"
        app:boxCornerRadiusTopStart="14dp"
        app:boxCornerRadiusTopEnd="14dp"
        app:boxCornerRadiusBottomStart="14dp"
        app:boxCornerRadiusBottomEnd="14dp"
        app:hintTextColor="@color/text_hint">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/versionEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColor="@color/text_primary"
            android:maxLines="1"
            android:imeOptions="actionDone" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="ðŸ’¡ Find all versions at github.com/frida/frida/releases"
        android:textAppearance="@style/TextAppearance.FridaLauncher.Caption"
        android:textColor="@color/text_hint" />

</LinearLayout>
